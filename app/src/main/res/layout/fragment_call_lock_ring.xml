<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lockring="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    android:id="@+id/fragment_call_lock_ring"
    >

    <com.wearespindle.spindlelockring.library.LockRing
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/lock_ring"
        android:focusable="true"
        android:gravity="center"
        lockring:glowRadius="@dimen/lock_ring_glow_radius"
        lockring:handleDrawable="@drawable/ic_lock_ring_handle"
        lockring:innerRadius="@dimen/lock_ring_inner_radius"
        lockring:outerRadius="@dimen/lock_ring_target_placement_radius"
        lockring:outerRingDrawable="@drawable/ic_lock_ring_outer_ring"
        lockring:pointDrawable="@drawable/ic_lock_screen_glow_dot"
        lockring:snapMargin="@dimen/lock_ring_snap_margin"
        lockring:targetDescriptions="@array/lock_ring_descriptions"
        lockring:targetDrawables="@array/lock_ring_drawables"
        lockring:directionDescriptions="@array/lock_ring_direction_descriptions"
        />
</RelativeLayout>